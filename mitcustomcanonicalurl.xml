	<copyright>(C) 2019 Robert Mittl. All rights reserved.</copyright>
	<license>GNU/GPL http://www.gnu.org/licenses/gpl.html</license>
	<authorEmail>info@mittl-medien.de</authorEmail>
	<authorUrl>https://mittl-medien.de</authorUrl>
	<version>1.0</version>
	<description>PLG_SYSTEM_MITCUSTOMCANONICAL_XML_DESCRIPTION</description>
	<files>
	<folder>language</folder>
		<filename plugin="mitcustomcanonicalurl">mitcustomcanonicalurl.php</filename>
		
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_system_mitcustomcanonicalurl.ini</language>
		<language tag="en-GB">en-GB.plg_system_mitcustomcanonicalurl.sys.ini</language>
	</languages>
		
	<config>
	<fieldset name="basic">
		<fields name="params">
			<field name="mit_custom_canonical_urls"  label="PLG_SYSTEM_MIT_CUSTOM_CANONICAL_LABEL" description="PLG_SYSTEM_MIT_CUSTOM_CANONICAL_DESCRIPTION" type="textarea" rows="15" cols="25" />
		</fields>
		</fieldset>
	</config>
	<updates>
	  <updateservers>
        <server type="extension" priority="1" name="PLG_SYSTEM_MITCUSTOMCANONICAL">
            https://raw.githubusercontent.com/rmittl/mitcustomcanonical/master/update.xml
        </server>
    </updateservers>
</extension>